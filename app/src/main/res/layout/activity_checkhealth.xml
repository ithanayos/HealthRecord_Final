<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="utcc.cken.tae.som.healthrecord.CheckhealthActivity"
    android:background="@drawable/wall">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:id="@+id/textView37"
            android:textSize="@dimen/h1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button16"
                android:onClick="clickCheckpress"
                android:layout_weight="1"
                android:background="@drawable/pressure" />

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button17"
                android:onClick="clickCheckheart"
                android:layout_weight="1"
                android:background="@drawable/heartbeat"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/pressure"
                android:id="@+id/textView33"
                android:textSize="@dimen/h3"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/heartbeat"
                android:id="@+id/textView34"
                android:textSize="@dimen/h3"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button18"
                android:onClick="clickCheckglucose"
                android:layout_weight="1"
                android:background="@drawable/glucose" />

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button19"
                android:onClick="clickCheckbmi"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bmi" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="@string/sugar"
                android:id="@+id/textView35"
                android:textSize="@dimen/h3"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmi"
                android:id="@+id/textView36"
                android:textSize="@dimen/h3"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>